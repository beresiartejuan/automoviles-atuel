---
interface Props {
    tag: "h1" | "h2" | "h3" | "h4";
    variant?: "primary" | "secondary" | "highlight" | "compac";
    className?: string;
}
const { tag: Tag, variant = "primary", className = "" } = Astro.props;
---

<Tag class={`title ${variant} ${className}`}>
    <slot />
</Tag>

<style lang="scss">
    .title {
        text-wrap: balance;
        margin: 0;
    }

    /* Variantes generales */
    .title.primary {
        font-family: "Popins", serif;
        font-size: 3rem;
        font-weight: 600;
        color: aliceblue;
        text-shadow: 2px 2px 5px #000;

        @media screen and (max-width: 750px) {
            font-size: 2.5rem;
        }
    }

    .title.secondary {
        font-family: "Kanit", sans-serif;
        font-size: 2rem;
        font-weight: 500;
        text-align: center;
        color: #333;
    }

    .title.highlight {
        font-size: 2.8rem;
        font-weight: 500;
        text-decoration: underline;
        text-align: center;
    }

    .title.compac {
        max-width: fit-content;
        margin: 0 auto;
        font-family: "Kanit", sans-serif;
        font-weight: 600;
        font-size: 2.1rem;
        text-align: center;

        @media screen and (max-width: 750px) {
            font-size: 1.5rem;
        }
    }

    /* Responsividad */
    @media screen and (max-width: 750px) {
        .title.highlight {
            font-size: 2.5rem;
        }
    }
</style>

---
import type { ICar } from "@/db/models";
import Card from "./Card.astro";

interface Props {
    cars: ICar[];
}

const { cars } = Astro.props;
---

<section class="cards">
    {cars.map((car) => <Card {...car} />)}
</section>

<style lang="scss">
    .cards {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(18rem, 1fr));
        gap: 1rem;
        max-width: 70vw;
        width: fit-content;
        margin: 0 auto;
        padding: 1rem;
        box-sizing: border-box;
        border: 1px solid transparent;

        @media screen and (width < 900px) {
            max-width: 100vw;
        }
    }
</style>
